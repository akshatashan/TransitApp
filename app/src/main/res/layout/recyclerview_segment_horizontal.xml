<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>â€¨
        <variable
            name="segment"
            type="io.door2door.transitapp.models.Segment"/>
        <variable
            name="handler"
            type="io.door2door.transitapp.adapters.SegmentRecyclerViewAdapter"/>
    </data>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/cardView"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTravelModeIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgTravelModeIcon"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="12dp"
            android:text="@{segment.name}" />
    </LinearLayout>

</android.support.v7.widget.CardView>
</layout>